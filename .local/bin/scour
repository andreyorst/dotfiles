#!/usr/bin/env sh

if [ -z "$(command -v scour)"  ]; then
    printf "%s\n" "scour is not installed" >&2
    exit 1
fi

while [ $# -ne 0 ]; do
    if [ -e "$1" ]; then
        tmp=$(mktemp "${TMPDIR:-/tmp}"/scour.svg.XXXXXXXX)
        command scour -i "$1" -o "$tmp"
        mv "$tmp" "$1"
    else
        printf "file %s not found\n" "$1" >&2
    fi
    shift
done
