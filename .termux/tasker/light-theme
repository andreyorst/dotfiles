#!/data/data/com.termux/files/usr/bin/sh
emacsclient -e '(progn
                  (disable-theme local-config-dark-theme)
                  (load-theme local-config-light-theme t))' > /dev/null 2>&1 &

echo "background=#fbfbfb
foreground=#000000
cursor=#c0c0c0

color0=#000000
color1=#800000
color2=#008000
color3=#808000
color4=#000080
color5=#800080
color6=#008080
color7=#c0c0c0

color8=#808080
color9=#ff0000
color10=#00ff00
color11=#ffff00
color12=#0000ff
color13=#ff00ff
color14=#00ffff
color15=#ffffff" > ~/.termux/colors.properties

echo "light" > ~/.termux/theme-variant
termux-reload-settings > /dev/null 2>&1 &
