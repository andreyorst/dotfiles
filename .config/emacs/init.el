  "Split current paragraph into lines with one sentence each."
  (interactive)
  (save-excursion
    (let ((fill-column (point-max)))
      (fill-paragraph))
    (let ((auto-fill-p auto-fill-function)
          (end (progn (end-of-line) (backward-sentence) (point))))
      (back-to-indentation)
      (unless (= (point) end)
        (auto-fill-mode -1)
