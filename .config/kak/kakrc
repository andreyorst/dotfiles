evaluate-commands %sh{
    config_files="
        defperl.kak
        commands.kak
        common.kak
        mappings.kak
        languages.kak
        recentf.kak
        plugins.kak
        mnemonic-user-mode.kak
    "

    for file in $config_files; do
        printf "%s" "
            try %{
                source '$kak_config/$file'
            } catch %{
                echo -debug %val{error}
            }
        "
    done
}

