#!/bin/sh

cd ~/Git/emacs && \
    make clean \
    && ./autogen.sh \
    && ./configure \
           --without-compress-install \
           --with-native-compilation=aot \
           --with-pgtk \
           --with-mailutils \
           --with-tree-sitter=ifavailable \
           --prefix="$HOME"/.local \
    && make -j$(($(nproc)/2)) \
    && make uninstall \
    && make install \
    && init emacs
